# IDS Project EditorConfig
# This file defines formatting defaults for all text files in the repository.
# It keeps diffs stable and prevents editor-specific formatting drift.

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
